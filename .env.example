#!/bin/bash

# Production Environment Variables Setup
# Copy this file to .env and update with your actual values

# Database Configuration
export DB_URL="jdbc:mysql://your-production-db-host:3306/blood_donor_db?createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true"
export DB_USERNAME="your-db-username"
export DB_PASSWORD="your-secure-db-password"

# Email Configuration
export EMAIL_HOST="smtp.gmail.com"
export EMAIL_PORT="587"
export EMAIL_USERNAME="your-email@gmail.com"
export EMAIL_PASSWORD="your-app-specific-password"

# JWT Configuration
export JWT_SECRET="your-256-bit-secret-key-here-change-this-in-production"
export JWT_EXPIRATION="86400000"

# Admin Configuration
export ADMIN_USERNAME="admin"
export ADMIN_PASSWORD="your-secure-admin-password"

# CORS Configuration
export CORS_ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# Logging Configuration
export LOG_LEVEL="INFO"
export SECURITY_LOG_LEVEL="WARN"
export SQL_LOG_LEVEL="WARN"
export SHOW_SQL="false"
export FORMAT_SQL="false"

echo "Environment variables set for production deployment"
echo "IMPORTANT: Update these values with your actual production credentials"
